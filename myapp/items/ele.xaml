<UserControl x:Class="myapp.items.ele"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:myapp.items"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="40">
    <Grid>
        <TextBox Visibility="Hidden" x:Name="mark" Height="20" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="10" Foreground="#FF0C0C0C"/>
        <Ellipse x:Name="el1" Fill="Black" Margin="2"  />
        <Ellipse x:Name="el2" Margin="5" Fill="#FFC3C3C3" />
        <Ellipse x:Name="el3" Margin="10,10,10,10" Fill="#FFC3C3C3" />
        <Rectangle x:Name="border" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="40" Stroke="#FFD11010"/>
        <TextBlock x:Name="index_label" TextAlignment="Center" HorizontalAlignment="Left" Margin="8,12,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="22" Height="16" Foreground="#FF0228D4"/>


    </Grid>
</UserControl>

